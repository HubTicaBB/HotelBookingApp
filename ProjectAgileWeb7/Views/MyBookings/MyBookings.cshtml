@model IEnumerable<ProjectAgileWeb7.Models.Booking>

@{
    ViewData["Title"] = "MyBookings";
}

<h1>My Bookings</h1>
<br />
<br />
<h5>
    Dear <span>
        @if (ViewBag.User.FirstName == null && ViewBag.User.LastName == null)
        {

            @ViewBag.User.UserName
        }
        else
        {
            @Html.Raw($"{@ViewBag.User.FirstName} {@ViewBag.User.LastName}")
        },
    </span> you have
    <span>
        @if (@Model.Count() == 0)
        {
            <span> no bookings </span>
        }
        else if (@Model.Count() == 1)
        {
            <span>1 booking </span>
        }
        else
        {
            <span> @Model.Count() bookings </span>
        }
    </span> saved on your account.
</h5>
<br />

@foreach (var booking in @Model)
{
    <div> @booking.Payment.Type</div>
    <div class="card mt-2 mb-2">
        <div class="card-body">
            <h4 class="card-title"> Booking no. @booking.Id</h4>

            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src=@Url.Content(booking.Room.Hotel.ImageUrl) class="card-img" alt="Hotel Image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h3 class="card-title">@booking.Room.Hotel.Name</h3>
                        <div>
                            @for (var i = 0; i < booking.Room.Hotel.Stars; i++)
                            {
                                <i class="fas fa-star fa-sm text-warning"></i>
                            }
                        </div>
                        <div class="card-text">@booking.Room.Hotel.Address, @booking.Room.Hotel.ZipCode, @booking.Room.Hotel.City, @booking.Room.Hotel.Country</div>
                        <div class="card-text">
                            <small class="text-muted">
                                Distance from Center: @booking.Room.Hotel.DistanceFromCenter km
                            </small>
                        </div>
                        <div class="card-text">
                            <small class="text-muted">@booking.Room.Hotel.Description</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    Number of nights:
                    @{ var nightsCount = booking.CheckOut - booking.CheckIn; }
                    <span class="text-success">@nightsCount.ToString("%d")</span>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    Arrival Date:
                    <span class="text-success">@booking.CheckIn.ToString("dddd, MMMM d, yyyy", new System.Globalization.CultureInfo("en-US"))</span>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    Departure Date:
                    <span class="text-success">@booking.CheckOut.ToString("dddd, MMMM d, yyyy", new System.Globalization.CultureInfo("en-US"))</span>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    Bookning status:
                    <span class="text-success">@booking.Status</span>
                </div>
            </div>

        </div>
    </div>
}
